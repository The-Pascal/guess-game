<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
    </style>

    <style name="main_heading_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:fontFamily">@font/bungee_shade</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="sub_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="plus_minus_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/plus_minus_bg</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="choose_number_edit_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">90sp</item>
        <item name="android:importantForAutofill">no</item>
    </style>
</resources>